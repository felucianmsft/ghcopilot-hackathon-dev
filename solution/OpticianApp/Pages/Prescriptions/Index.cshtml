@page
@model OpticianApp.Pages.OpticalPrescriptions.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
    <a asp-page-handler="ExportToPdf">Export to PDF</a>
    <a asp-page-handler="ExportToExcel">Export to Excel</a>
</p>
<form asp-page="Index" method="get">
    <p>
        Customer: <input type="text" name="SearchCustomer" value="@Model.SearchCustomer">
        Date: <input type="date" name="SearchDate" value="@Model.SearchDate">
        <input type="submit" value="Search" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.OpticalPrescription[0].PrescriptionDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OpticalPrescription[0].RightEyeCorrection)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OpticalPrescription[0].LeftEyeCorrection)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OpticalPrescription[0].Customer)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OpticalPrescription)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.PrescriptionDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RightEyeCorrection)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LeftEyeCorrection)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Customer.FullName)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
